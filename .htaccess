# Enable the Rewrite Engine
RewriteEngine On

# Set the base URL for all rewrite rules
RewriteBase /

# Rule to rewrite URLs like /page to /page.php if the corresponding PHP file exists
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([a-zA-Z0-9_-]+)\/?$ $1.php [NC,L]

# Rule to remove the .php extension from URLs if the PHP file exists
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^/]+)/?$ $1.php [L]

# Optional: Redirect from .php URLs to clean URLs (remove .php extension)
RewriteCond %{THE_REQUEST} \s/([^.]+)\.php[?\s] [NC]
RewriteRule ^ %1 [R=301,L]
